{
  "buildCommand": "npm run build",
  "framework": "nextjs",
  "redirects": [
    {
      "source": "/:path*",
      "has": [
        {
          "type": "host",
          "value": "www.(?<domain>.*)"
        }
      ],
      "destination": "https://:domain/:path*",
      "permanent": true
    }
  ]
}
